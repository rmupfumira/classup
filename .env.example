# === Application ===
APP_NAME=ClassUp
APP_ENV=development
APP_SECRET_KEY=your-random-64-char-hex-key-here-change-this-in-production-abcdef1234567890
APP_BASE_URL=http://localhost:8000
APP_DEBUG=true
APP_LOG_LEVEL=DEBUG

# === Database ===
# For local development with PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/classup
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# === Redis (Optional for local dev) ===
# Leave empty or comment out to use in-memory fallbacks
REDIS_URL=redis://localhost:6379

# === Authentication ===
# Falls back to APP_SECRET_KEY if not set
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# === Cloudflare R2 (S3-compatible) ===
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=classup-files
R2_PUBLIC_URL=

# === Resend (Email) ===
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM_ADDRESS=notifications@classup.co.za
EMAIL_FROM_NAME=ClassUp

# === WhatsApp (Meta Cloud API) ===
WHATSAPP_API_URL=https://graph.facebook.com/v21.0
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_BUSINESS_ACCOUNT_ID=

# === Defaults ===
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,af
MAX_UPLOAD_SIZE_MB=10
INVITATION_CODE_EXPIRY_DAYS=7
